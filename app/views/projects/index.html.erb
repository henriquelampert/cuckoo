<div class="page-header">
  <h1>Projects</h1>
  <%= link_to '<i class="icon-plus"></i> Add New'.html_safe, new_project_path, :class => 'btn btn-large' %>
</div>

<div>
  <strong>
    <%= t('plurals.projects', count: @projects.count) %>
  </strong>
</div>

<br/>

<table class="table table-striped table-list">

  <thead>
    <tr>
      <% if @projects.any? %>
        <th>Name</th>
        <th>Actions</th>
      <% else %>
        <th>
          <div class="text-center alert alert-info">
            <%= t :no_projects %>
          </div>
        </th>
      <% end %>
    </tr>
  </thead>

  <tbody>

  <% @projects.each do |project| %>

    <tr>

      <td><%= project.name %></td>
      <td>
        <div class="btn-group">
          <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="icon-edit icon-white"></i> Actions
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to '<i class="icon-edit"></i> Edit'.html_safe, edit_project_path(project) %>
            </li>
          </ul>
        </div>
      </td>

    </tr>

  <% end %>

  </tbody>

</table>