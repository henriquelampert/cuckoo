<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
    <tr>
      <td><%= project.name %></td>
      <td><%= link_to 'Show', project %></td>
      <td><%= link_to 'Edit', edit_project_path(project) %></td>
      <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Project', new_project_path %>




<div class="page-header">
  <h1>Users</h1>
  <%= link_to '<i class="icon-plus"></i> Add New'.html_safe, '#', :class => 'btn btn-large' %>
</div>


<div><strong>10</strong> users</div><br/>

<table class="table table-striped table-list">

  <thead>
    <tr>
      <th width="50px"></th>
      <th>Name</th>
      <th>Email</th>
      <th>Joined at</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>

    <% 10.times do %>

      <tr>

        <td><%= gravatar_image_tag('not@spam.com', gravatar: { size: 35 }, class: 'gravatar') %></td>
        <td>Donald Knuth</td>
        <td>donal@knuth.com</td>
        <td><%= l Time.now, format: :short %></td>
        <td>
          <div class="btn-group">
            <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="icon-edit icon-white"></i> Ações
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to '<i class="icon-edit"></i> Edit'.html_safe, '#' %>
              </li>
              <li class="divider"></link>
              <li>
                <%= link_to '<i class="icon-trash"></i> Delete'.html_safe, '#' %>
              </li>
            </ul>
          </div>
        </td>

      </tr>

    <% end %>

  </tbody>

</table>